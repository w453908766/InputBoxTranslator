
{
  "name": "InputBox Translator",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Quickly translate the text you write",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["contextMenus"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery.js", "contentScript.js"]
    }
  ],
  "commands": {
    "run-translate": {
      "suggested_key": {
        "default": "Alt+W"
      },
      "description": "Quickly translate the text you write"
    }
  }
}